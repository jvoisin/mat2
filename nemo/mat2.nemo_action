[Nemo Action]
Active=true
Name=Clean Metadata
Comment=Remove metadata from selected files
Icon-Name=edit-clear

# LOGIC:
# 1. Run mat2
# 2. Success (&&): Show "Metadata successfully cleaned."
# 3. Failure (||): Show "An error occurred during cleaning."
Exec=sh -c 'mat2 %F && notify-send "MAT2" "Metadata successfully cleaned." || notify-send "MAT2" "An error occurred during cleaning."'

Selection=NotNone
Extensions=any;
Quote=double
Terminal=false
